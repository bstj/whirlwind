form.editor(ng-init='ctrl.getTask()', ng-submit='ctrl.save()')
    div
        button(class='btn', ng-click='ctrl.cancel()') Cancel
        input(class='btn btn-primary', type='submit', name='Save' value='Save')
    div
        label(for='name') Name
        input#name(type='text', required='', ng-model='ctrl.task.name')
    div
        label(for='id') id
        span#id {{ctrl.task._id}}
    div
        label(for='status') Status
        select#status(ng-model='ctrl.task.status', ng-options='s.id as s.label for s in ctrl.statusOptions')
    div
        label(for='description') Description
        #description(text-angular='', ng-model='ctrl.task.description')
    div
        label(for='priority') Priority
        input#priority(type='number', ng-model='ctrl.task.priority')
    div
        label(for='estimate') Estimate
        input#estimate(type='number', ng-model='ctrl.task.estimate')
    div
        label(for='units') Units
        select#units(ng-model='ctrl.task.estimate_units', ng-options='u for u in ctrl.unitOptions')
    div
        label(for='order') Order
        input#order(type='number', ng-model='ctrl.task.order')
    div
        label(for='date') Target date
        input#date(type='date', maxlength='10', ng-model='ctrl.task.targetDate')
    div
        label(for='notes') Notes
        #notes(text-angular='', ng-model='ctrl.task.notes')
    div
        label(for='modified') Modified
        span#modified {{ctrl.task.modified}}
    div
        button(class='btn', ng-click='ctrl.cancel()') Cancel
        input(class='btn btn-primary', type='submit', name='Save' value='Save')

